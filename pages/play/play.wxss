/* pages/play/play.wxss */
.content{
    position: relative;
    overflow: hidden;
    height:568px;
}
.imageBg{
    width:100%;
    height:100%;
}

#rotateBg{
    position: absolute;
    top: 100px;
    left:10%;
    width: 80%;
    height:260px;/*控制歌曲背景图*/
    border-radius:100%;
     -webkit-box-shadow: 0 0 5px rgba(255, 255, 255, 1);
    box-shadow: 0 0 5px rgba(255, 255, 255, 1);
}
#rotateBg image{
    width:100%;
    height: 100%;
}

#songpic{
    width:60%;
    height:62%;
    position: absolute;
    top: 50px;
    left: 20%;
     border-radius:100%;
}

#handlePic{text-align: center;position: absolute;z-index:20;width: 100%;top:0;}
#handlePic image{width: 222rpx;height:366rpx;margin:-60rpx 0 0 60px; transform-origin:60rpx 60rpx; transform: rotate(-20deg);
transition: all linear .5s }

.trun-bg {
	height: 250px;
	width: 250px;
	position: fixed;
	top: 20%;
	left: 50%;
	border-radius: 50%;
	border: 40px solid rgba(0,0,0,0.5);
}

.play-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 350rpx;
}

.lyric {
	font-size: 15px;
	text-align: center;
	padding-left: 15px;
	padding-right: 15px;
	margin-bottom: 60rpx;
	color: #d0d0d0;
	transition: all .5s;
}

.lyric.selected {
	color: #fff;
	font-size: 16px;
}

.lyric text {
	display: block;
	margin-top: 15rpx;
}



.footer{
    position: absolute;
    bottom:0;
    left:0;
    right: 0;
    background: rgba(0,0,0,.7)
}

.progress {
	padding-top: 10px; 
	display: flex;
  	flex-direction: row;
  	justify-content: space-around;
	align-items: center;
}

.progress text {
	font-size: 10px;
	width: 12%;
	text-align: center;
}

.progress progress {
	width: 76%;
}


.ctrl_play{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items:center;
    padding:10px 0 ;
}
.ctrl_play image {
  	display: block;
  	width: 40px;
  	height: 40px;
  	margin: 0 5px;
}


.controls .mode{
  	position: absolute;
  	width: 24px;
  	height: 24px;
  	left: 15px;
}

.controls .fav {
	position: absolute;
  	width: 24px;
  	height: 24px;
  	right: 15px;	
}

.favitem {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 45px;
}
